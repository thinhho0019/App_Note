<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutAddUrlcontainer"
    android:layout_margin="@dimen/_10sdp"
    android:layout_gravity="center"
    android:background="@drawable/background_add_url"

    >
    <ImageView
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iconAddUrl"
        android:contentDescription="@string/app_name"
        />
    <TextView
        android:id="@+id/textViewAddUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm URL"
        app:layout_constraintStart_toEndOf="@id/iconAddUrl"
        app:layout_constraintTop_toTopOf="@id/iconAddUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iconAddUrl"
        android:fontFamily="@font/ubuntubold"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        />
        <EditText
            android:id="@+id/inputTextUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập đường dẫn"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintTop_toBottomOf="@id/iconAddUrl"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:background="@null"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:inputType="textUri"
            android:includeFontPadding="false"
            android:fontFamily="@font/ubunturegular"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/textViewThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:fontFamily="@font/ubuntubold"
            android:textColor="@color/colorNoteColor2"
            android:textSize="@dimen/_15sdp"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputTextUrl"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/textViewHuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:fontFamily="@font/ubuntubold"
        android:textColor="@color/colorNoteColor2"
        android:textSize="@dimen/_15sdp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputTextUrl"
        app:layout_constraintEnd_toStartOf="@id/textViewThem"
        android:layout_margin="@dimen/_10sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>